<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orig" />

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:text="Back"
        android:textColor="#6D6D80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginEnd="-8dp"
        android:rotationY="-47"
        app:layout_constraintBottom_toBottomOf="@+id/txt_back"
        app:layout_constraintEnd_toStartOf="@+id/txt_back"
        app:layout_constraintTop_toTopOf="@+id/txt_back"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/txt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="226dp"
        android:text="13+"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_picture_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="254dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:text="Avengers: \nEnd Game"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action, Adventure, Fantasy"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_picture_name"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="245dp"
        android:layout_height="28dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/txt_storyline_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storyline"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="406dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_storyline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/txt_storyline_heading"
        app:layout_constraintTop_toBottomOf="@+id/txt_storyline_heading" />

    <TextView
        android:id="@+id/txt_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cast"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="554dp"/>

    <ImageView
        android:id="@+id/img_actor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/robert_down"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="585dp"/>

    <TextView
        android:id="@+id/txt_robert_down"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Robert Downey Jr."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/img_actor_1"
        app:layout_constraintStart_toStartOf="@+id/img_actor_1"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_1" />

    <ImageView
        android:id="@+id/img_actor_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_actor_1"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/img_actor_1"
        app:srcCompat="@drawable/chris_evans" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/img_actor_2"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_2" />

    <ImageView
        android:id="@+id/img_actor_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_actor_2"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/img_actor_2"
        app:srcCompat="@drawable/mark_ruffal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/img_actor_3"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_3" />

    <ImageView
        android:id="@+id/img_actor_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_actor_3"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/img_actor_3"
        app:srcCompat="@drawable/chris_hemsw" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/img_actor_4"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_4" />

</androidx.constraintlayout.widget.ConstraintLayout>