<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity"
    android:background="@color/dark_blue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orig" />

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:text="@string/back"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginEnd="-8dp"
        android:rotationY="-47"
        app:layout_constraintBottom_toBottomOf="@+id/txt_back"
        app:layout_constraintEnd_toStartOf="@+id/txt_back"
        app:layout_constraintTop_toTopOf="@+id/txt_back"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/txt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="226dp"
        android:text="@string/age"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_picture_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="254dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:text="@string/picture_name"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genre"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="338dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="364dp"
        android:numStars="5"
        android:progressBackgroundTint="#6D6D80"
        android:progressTint="@color/red"
        android:rating="4"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_num_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reviews"
        android:textColor="#6D6D80"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="103dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="362dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_storyline_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="406dp"
        android:layout_marginEnd="16dp"
        android:text="@string/storyline_heading"
        android:textColor="#ECECEC"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_storyline_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:alpha="0.75"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:text="@string/picture_description"
        android:textColor="#6D6D80"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cast"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="554dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="116dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_actor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/robert_down"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="585dp"/>

    <TextView
        android:id="@+id/txt_robert_down"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="Robert Downey Jr."
        android:textColor="#D8D8D8"
        app:layout_constraintEnd_toEndOf="@+id/img_actor_1"
        app:layout_constraintStart_toStartOf="@+id/img_actor_1"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_1"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_actor_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_actor_1"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/img_actor_1"
        app:srcCompat="@drawable/chris_evans" />

    <TextView
        android:id="@+id/txt_textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chris\nEvans"
        android:textColor="#D8D8D8"
        app:layout_constraintStart_toStartOf="@+id/img_actor_2"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_2"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_actor_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_actor_2"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/img_actor_2"
        app:srcCompat="@drawable/mark_ruffal" />

    <TextView
        android:id="@+id/txt_textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark\nRuffalo"
        android:textColor="#D8D8D8"
        app:layout_constraintStart_toStartOf="@+id/img_actor_3"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_3"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_actor_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_actor_3"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/img_actor_3"
        app:srcCompat="@drawable/chris_hemsw" />

    <TextView
        android:id="@+id/txt_textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chris\nHemsworth"
        android:textColor="#D8D8D8"
        app:layout_constraintStart_toStartOf="@+id/img_actor_4"
        app:layout_constraintTop_toBottomOf="@+id/img_actor_4"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>